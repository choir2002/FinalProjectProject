<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reactwhite"
    tools:context=".LoginUserActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="347dp"
            android:layout_gravity="center"
            android:background="#A9AB36">

            <ImageView
                android:id="@+id/image"
                android:layout_width="237dp"
                android:layout_height="206dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/daftar"></ImageView>

            <TextView
                android:id="@+id/hey_selamat"
                android:layout_width="277dp"
                android:layout_height="58dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="71dp"
                android:layout_marginTop="33dp"
                android:textStyle="bold"
                android:gravity="center_horizontal|top"
                android:text="Hey!\nSelamat Datang Kembali!"
                android:textColor="@color/navy"
                android:textSize="8pt" />
        </RelativeLayout>

        <LinearLayout
            android:background="#A9AB36"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="50dp">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/reactbeige"
                android:hint="email"
                android:textColor="@color/navy"
                android:inputType="text"
                android:paddingLeft="10dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="10dp" />


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/reactbeige"
                android:hint="password"
                android:textColor="@color/navy"
                android:inputType="textPassword"
                android:paddingLeft="10dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/reactnavy"
                android:text="Masuk"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textStyle="bold" />

            <Button
                android:id="@+id/keDaftar"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="50dp"
                android:background="@android:color/transparent"
                android:text="@string/button_not_register"
                android:textAllCaps="false"
                android:textColor="@color/navy"
                android:textSize="12sp"
                app:cornerRadius="50dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>